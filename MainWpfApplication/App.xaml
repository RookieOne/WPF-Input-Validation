<Application x:Class="MainWpfApplication.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainView.xaml">
    <Application.Resources>
         
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Validation Rules-->
                <ResourceDictionary Source="pack://application:,,,/ValidationRules;component/ValidationRules.xaml" />                
                
                <!-- Exceptions -->
                <ResourceDictionary Source="pack://application:,,,/Exceptions;component/Exceptions.xaml" />
            
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
