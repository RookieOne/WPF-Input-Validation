<Application x:Class="MainWpfApplication.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainView.xaml">
    <Application.Resources>
         
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary Source="Styles.xaml" />
                
                <!-- Validation Rules-->
                <ResourceDictionary Source="pack://application:,,,/ValidationRules;component/ValidationRules.xaml" />                
                
                <!-- Exceptions -->
                <ResourceDictionary Source="pack://application:,,,/Exceptions;component/Exceptions.xaml" />
            
                <!-- Data Error Info -->
                <ResourceDictionary Source="pack://application:,,,/DataErrorInfo;component/DataErrorInfo.xaml" />
                
                <!-- Enterprise Library -->
                <ResourceDictionary Source="pack://application:,,,/EnterpriseLibraryExample;component/EnterpriseLibrary.xaml" />
                
                <!-- Custom Markup Extension -->
                <ResourceDictionary Source="pack://application:,,,/CustomMarkupExtension;component/CustomMarkupExtension.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
